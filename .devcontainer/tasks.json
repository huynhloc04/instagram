{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Flask App",
      "type": "shell",
      "command": "poetry",
      "args": ["run", "python", "-m", "flask", "run", "--host=0.0.0.0", "--port=8000"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Flask App with Debugger",
      "type": "shell",
      "command": "poetry",
      "args": ["run", "python", "-m", "debugpy", "--listen", "0.0.0.0:5678", "--wait-for-client", "-m", "flask", "run", "--host=0.0.0.0", "--port=8000"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "poetry",
      "args": ["run", "python", "-m", "pytest"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Format Code",
      "type": "shell",
